---
import Divider from '../components/Login/Divider.astro';
import { EmailLoginForm } from '../components/Login/EmailLoginForm';
import { GitHubButton } from '../components/Login/GitHubButton';
import { GoogleButton } from '../components/Login/GoogleButton';
import { FacebookButton } from '../components/Login/FacebookButton';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title='Login'>
  <div slot='slot-topbar'></div>
  <main
    class='bg-default flex h-screen w-full items-center justify-center p-4 sm:p-0'
  >
    <section
      class='mx-auto flex flex-col items-start justify-start rounded-2xl border border-black bg-white p-6 shadow-xl sm:max-w-[400px] sm:items-center sm:justify-center sm:py-20 md:p-10'
    >
      <div class='mb-2 text-left sm:mb-5 sm:text-center'>
        <h1 class='mb-2 text-3xl font-bold sm:mb-5 sm:text-5xl'>Login</h1>
        <p class='mb-3 text-base leading-6 text-gray-600'>
          Welcome back! Let's take you to your account.
        </p>
      </div>

      <div class='flex w-full flex-col gap-2'>
        <GitHubButton client:load />
        <GoogleButton client:load />
        <FacebookButton client:load />
      </div>

      <Divider />

      <EmailLoginForm client:load />

      <div class='mt-6 text-center text-sm text-slate-600'>
        Don't have an account?{' '}
        <a
          href='/signup'
          class='text-secondary font-medium hover:text-red-700 hover:underline'
        >
          Sign up
        </a>
      </div>
    </section>
  </main>
</BaseLayout>
